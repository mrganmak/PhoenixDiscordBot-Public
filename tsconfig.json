{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./build",
		"module": "CommonJS",
		"target": "ESNext",
		"noImplicitAny": true,
		"sourceMap": true,
		"strict": true,
		"lib":[
			"es2015"
		],

		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"exclude": ["./node_modules"]
}
